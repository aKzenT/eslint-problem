{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "../../wwwroot/js",
    "target": "ESNext",
    "allowJs": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "importsNotUsedAsValues": "preserve",
    "useDefineForClassFields": false, // Not compatible with vue-property-decorator
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "compileOnSave": true
}
